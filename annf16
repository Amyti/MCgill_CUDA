import torch
import torch.nn as nn
import torch.optim as optim
from torchvision import datasets, transforms
from tqdm import tqdm
import time

# Pour maximiser les perf CUDA
torch.backends.cudnn.benchmark = True

device = torch.device("cuda" if torch.cuda.is_available() else "cpu")
print(f"Device: {device}")

transform = transforms.Compose([
    transforms.ToTensor(),
    transforms.Normalize((0.5,), (0.5,))
])

testset = datasets.MNIST(root='./data', train=False, download=True, transform=transform)
testloader = torch.utils.data.DataLoader(testset, batch_size=512, shuffle=False)

class sANN(nn.Module):
    def __init__(self):
        super(sANN, self).__init__()
        self.fc1 = nn.Linear(28*28, 256)
        self.dropout1 = nn.Dropout(0.2)
        self.fc2 = nn.Linear(256, 128)
        self.dropout2 = nn.Dropout(0.2)
        self.fc3 = nn.Linear(128, 10)

    def forward(self, x):
        x = x.view(x.size(0), -1)
        x = torch.relu(self.dropout1(self.fc1(x)))
        x = torch.relu(self.dropout2(self.fc2(x)))
        return self.fc3(x)

def entrainement():
    model = sANN().to(device)
    criterion = nn.CrossEntropyLoss()
    optimizer = optim.Adam(model.parameters(), lr=1e-3)
    trainset = datasets.MNIST(root='./data', train=True, download=True, transform=transform)
    trainloader = torch.utils.data.DataLoader(trainset, batch_size=512, shuffle=True)

    model.train()
    for epoch in tqdm(range(1), desc="Training"):
        for images, labels in trainloader:
            images, labels = images.to(device), labels.to(device)
            optimizer.zero_grad()
            output = model(images)
            loss = criterion(output, labels)
            loss.backward()
            optimizer.step()

    torch.save(model.state_dict(), "poids.pth")
    return model

def test_inference(model, dtype=torch.float32, warmup=10, runs=100):
    model.eval().to(device)
    if dtype == torch.float16:
        model.half()  # conversion des poids en FP16

    images, _ = next(iter(testloader))
    images = images.to(device)
    if dtype == torch.float16:
        images = images.half()  # conversion des entrées

    # reset et warm-up
    torch.cuda.empty_cache()
    torch.cuda.reset_peak_memory_stats()
    torch.cuda.synchronize()
    for _ in range(warmup):
        with torch.no_grad():
            model(images)
    torch.cuda.synchronize()

    start_mem = torch.cuda.memory_allocated()
    start = time.time()
    for _ in range(runs):
        with torch.no_grad():
            model(images)
    torch.cuda.synchronize()
    end = time.time()
    end_mem = torch.cuda.memory_allocated()
    peak_mem = torch.cuda.max_memory_allocated()

    used_mem = (end_mem - start_mem) / 1024**2
    peak_mem = peak_mem / 1024**2
    avg_time = (end - start) / runs

    print(f"=== inference {dtype} ===")
    print(f"Memory allocated : {used_mem:.2f} MB")
    print(f"Peak memory      : {peak_mem:.2f} MB")
    print(f"Avg forward time : {avg_time:.6f} s over {runs} runs\n")

# Exécution
model32 = entrainement()

print("float32")
model32.load_state_dict(torch.load("poids.pth"))
test_inference(model32, torch.float32)

print("float16")
model16 = sANN()
model16.load_state_dict(torch.load("poids.pth"))
test_inference(model16, torch.float16)
